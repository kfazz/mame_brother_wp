Author: Jordi Mallach <jordi@debian.org>
Description: Check for GNU.
 Fix builds on hurd-i386 by checking for __GNU__ and adding a gnu TARGETOS
 that defines NO_AFFINITY_NP.
Forwarded: no

Index: mame-0.148/makefile
===================================================================
--- mame-0.148.orig/makefile	2013-01-09 20:46:18.000000000 +0100
+++ mame-0.148/makefile	2013-01-14 22:39:07.000000000 +0100
@@ -77,6 +77,9 @@
 ifeq ($(firstword $(filter Linux,$(UNAME))),Linux)
 TARGETOS = linux
 endif
+ifeq ($(firstword $(filter GNU,$(UNAME))),GNU)
+TARGETOS = gnu
+endif
 ifeq ($(firstword $(filter Solaris,$(UNAME))),Solaris)
 TARGETOS = solaris
 endif
Index: mame-0.148/src/osd/sdl/sdl.mak
===================================================================
--- mame-0.148.orig/src/osd/sdl/sdl.mak	2013-01-14 22:37:44.000000000 +0100
+++ mame-0.148/src/osd/sdl/sdl.mak	2013-01-14 22:40:26.000000000 +0100
@@ -282,6 +282,13 @@
 
 endif
 
+ifeq ($(TARGETOS),gnu)
+BASE_TARGETOS = unix
+SYNC_IMPLEMENTATION = tc
+SDL_NETWORK = taptun
+DEFS += -DNO_AFFINITY_NP
+endif
+
 ifeq ($(TARGETOS),win32)
 BASE_TARGETOS = win32
 SYNC_IMPLEMENTATION = win32
